{
  "tasks":[
    {
      "name":"Run csharpier",
      "command":"dotnet",
      "args":[
        "csharpier",
        "."
      ],
      "include":[
        "**/*.cs"
      ]
    },
    {
      "name":"Run unit tests",
      "command":"dotnet",
      "args":[
        "test"
      ]
    },
    {
      "name":"Test building - creating swagger.json",
      "command":"dotnet",
      "args":[
        "build",
        "-c",
        "SwaggerConfig",
        "./Winter.csproj"
      ]
    },
    {
      "name":"Add formatted into git",
      "command":"git",
      "args":[
        "add",
        "--all"
      ]
    }
  ]
}
